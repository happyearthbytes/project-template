{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Bash-Debug (compress)",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/scripts/tools/compress.sh",
      "args": ["--input", "TODO.txt", "--compress", "--verbose"]
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Bash-Debug (download)",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/scripts/tools/download.sh",
      "args": ["--type","online_deps","--os","Rocky_Linux_9"]
    },
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "componentType",
      "description": "What type of component do you want to create?",
      "options": [
        "component",
        "directive",
        "pipe",
        "service",
        "class",
        "guard",
        "interface",
        "enum"
      ],
      "default": "component"
    },
    {
      "type": "promptString",
      "id": "manualArg",
      "description": "Enter Args:",
      "default": ""
    }
  ]

}