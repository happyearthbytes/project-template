{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "custom-check",
      "command": "find",
      "args": ["${workspaceFolder}","-type","f","!","-path","*.git/*","-exec", "file", "{}", ";"],
      "problemMatcher": {
        "owner": "file",
        "fileLocation": ["absolute"],
        // "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*):\\s+(.*)$",
          "file": 1,
          // "line": 2,
          // "column": 3,
          // "severity": 4,
          "message": 2
        }
      }
    }
  ]
}
